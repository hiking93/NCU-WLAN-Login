<resources>

	<style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
	</style>

	<style name="NoActionBarShadowAppTheme" parent="AppTheme">
		<item name="actionBarStyle">@style/NoShadowActionBar</item>
	</style>

	<style name="NoShadowActionBar" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
		<item name="elevation">0dp</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="TabTheme" parent="Theme.AppCompat">
		<item name="android:textColorPrimary">@color/white_text</item>
	</style>

</resources>